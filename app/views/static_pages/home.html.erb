<h1>Welcome!</h1>

<div>
  <% if user_signed_in? %>
    <p>Welcome <%=  current_user.email %></p>
    <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-info" %>
    <br>
    <%= link_to "Discover Powers", powers_path, class: "btn btn-primary" %>
    <%= link_to "Manage Powers", manage_powers_path, class: "btn btn-primary" %>
  <% else %>
    <p>Welcome guest! You need an account to see our awesome stuff! ;-)</p>
    <%= link_to "Sign in", new_user_session_path, class: "btn btn-success"%> or 
    <%= link_to "Sign up", new_user_registration_path, class: "btn btn-info"  %>
  <% end %>
</div>