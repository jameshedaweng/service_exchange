<div class="section-container">
  <h1>My Powers</h1>
  <br>
  <div class="container-outer">
    <div class="packery-container">
      <% @powers.each do |p| %>
        <div class="packery-item">
          <%= link_to p, class: "link-no-style" do %>
            <div class="packery-item-inner" style="background-color:<%= p.category.theme_color %>">
              <%= cl_image_tag(p.thumbnail.path, :width => 300, :crop => :fill, :quality => 75) %>
              <h4><%= p.title %></h4>
              <p><%= p.description %></p>
              <div class="item-actions">
                <%= link_to content_tag(:i, content_tag(:span, " Edit"), class: "fa fa-pencil"), edit_power_path(p), class: "btn-transparent-info" %>
                <%= link_to content_tag(:i, content_tag(:span, " Delete"), class: "fa fa-times"), p, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-transparent-warning" %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
